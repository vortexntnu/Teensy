    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run Debug w/ Integrated Terminal",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/debug.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug Executable",
            "logging": {"moduleLoad": false},
            "visualizerFile": "${env:VCINSTALLDIR}/../Common7/Packages/Debugger/Visualizers/stl.natvis"
        },
        {
            "name": "Build and Run Release w/ Integrated Terminal",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/release/release.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Release Executable",
            "logging": {"moduleLoad": false}

        },
        {
            "name": "Build and Run Debug w/ External Terminal",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/debug.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "Build Debug Executable",
            "logging": {"moduleLoad": false},
            "visualizerFile": "${env:VCINSTALLDIR}/../Common7/Packages/Debugger/Visualizers/stl.natvis"
        },
        {
            "name": "Build and Run Release w/ External Terminal",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/release/release.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "Build Release Executable",
            "logging": {"moduleLoad": false}

        }
    ]
}
